<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="SilkTexProjectSidebar" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="width-request">250</property>
    <style>
      <class name="sidebar"/>
    </style>
    
    <!-- Project header with toolbar -->
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">6</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkLabel">
                <property name="label">Project</property>
                <property name="xalign">0</property>
                <property name="hexpand">true</property>
                <style>
                  <class name="title-4"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="new_file_button">
                <property name="tooltip-text">New File</property>
                <property name="icon-name">document-new-symbolic</property>
                <property name="valign">center</property>
                <style>
                  <class name="flat"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="refresh_button">
                <property name="tooltip-text">Refresh Project</property>
                <property name="icon-name">view-refresh-symbolic</property>
                <property name="valign">center</property>
                <style>
                  <class name="flat"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Project selection dropdown -->
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-bottom">12</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkDropDown" id="project_dropdown">
                <property name="hexpand">true</property>
                <property name="enable-search">true</property>
              </object>
            </child>
            <child>
              <object class="GtkMenuButton" id="project_menu_button">
                <property name="tooltip-text">Project Options</property>
                <property name="icon-name">view-more-symbolic</property>
                <property name="menu-model">project_menu</property>
                <property name="valign">center</property>
                <style>
                  <class name="flat"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    
    <!-- Search entry -->
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="margin-bottom">6</property>
        <child>
          <object class="GtkSearchEntry" id="search_entry">
            <property name="placeholder-text">Search in project...</property>
            <property name="hexpand">true</property>
          </object>
        </child>
      </object>
    </child>
    
    <!-- Tabs for different views -->
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="margin-bottom">6</property>
        <style>
          <class name="linked"/>
        </style>
        <child>
          <object class="GtkToggleButton" id="files_tab_button">
            <property name="label">Files</property>
            <property name="hexpand">true</property>
            <property name="active">true</property>
            <property name="group">outline_tab_button</property>
          </object>
        </child>
        <child>
          <object class="GtkToggleButton" id="outline_tab_button">
            <property name="label">Outline</property>
            <property name="hexpand">true</property>
            <property name="group">files_tab_button</property>
          </object>
        </child>
      </object>
    </child>
    
    <!-- Files view stack -->
    <child>
      <object class="GtkStack" id="sidebar_stack">
        <property name="vexpand">true</property>
        
        <!-- Files tab content -->
        <child>
          <object class="GtkStackPage">
            <property name="name">files</property>
            <property name="child">
              <object class="GtkScrolledWindow">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="vexpand">true</property>
                    
                    <!-- File tree view -->
                    <child>
                      <object class="GtkTreeView" id="file_tree">
                        <property name="headers-visible">false</property>
                        <property name="enable-tree-lines">true</property>
                        <property name="activate-on-single-click">true</property>
                        <style>
                          <class name="navigation-sidebar"/>
                        </style>
                        <child>
                          <object class="GtkTreeViewColumn" id="file_column">
                            <property name="title">Files</property>
                            <child>
                              <object class="GtkCellRendererPixbuf" id="file_icon_renderer"/>
                            </child>
                            <child>
                              <object class="GtkCellRendererText" id="file_text_renderer"/>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        
        <!-- Outline tab content -->
        <child>
          <object class="GtkStackPage">
            <property name="name">outline</property>
            <property name="child">
              <object class="GtkScrolledWindow">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <child>
                  <object class="GtkTreeView" id="outline_tree">
                    <property name="headers-visible">false</property>
                    <property name="enable-tree-lines">true</property>
                    <property name="activate-on-single-click">true</property>
                    <style>
                      <class name="navigation-sidebar"/>
                    </style>
                    <child>
                      <object class="GtkTreeViewColumn" id="outline_column">
                        <property name="title">Outline</property>
                        <child>
                          <object class="GtkCellRendererText" id="outline_text_renderer"/>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
    
    <!-- Bottom status section -->
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="margin-top">6</property>
        <child>
          <object class="GtkSeparator"/>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-top">8</property>
            <property name="margin-bottom">8</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkImage" id="project_status_icon">
                <property name="icon-name">emblem-ok-symbolic</property>
                <style>
                  <class name="success"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="project_status_label">
                <property name="label">Project ready</property>
                <property name="xalign">0</property>
                <property name="hexpand">true</property>
                <property name="ellipsize">end</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  
  <!-- Menu model for project options -->
  <menu id="project_menu">
    <section>
      <item>
        <attribute name="label">Open Project...</attribute>
        <attribute name="action">app.open-project</attribute>
      </item>
      <item>
        <attribute name="label">New Project...</attribute>
        <attribute name="action">app.new-project</attribute>
      </item>
      <item>
        <attribute name="label">Close Project</attribute>
        <attribute name="action">app.close-project</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Project Settings...</attribute>
        <attribute name="action">app.project-settings</attribute>
      </item>
    </section>
  </menu>
</interface>
