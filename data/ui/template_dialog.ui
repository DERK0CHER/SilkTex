<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="SilkTexTemplateDialog" parent="AdwDialog">
    <property name="title">Select Template</property>
    <property name="content-width">500</property>
    <property name="content-height">600</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="title">New Document from Template</property>
                <property name="subtitle">Choose a template to start with</property>
              </object>
            </property>
          </object>
        </child>
        <property name="content">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <property name="spacing">12</property>
            <child>
              <object class="GtkSearchEntry" id="search_entry">
                <property name="placeholder-text">Search templates...</property>
                <property name="margin-bottom">6</property>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="min-content-height">350</property>
                <child>
                  <object class="GtkListBox" id="template_list">
                    <property name="selection-mode">single</property>
                    <style>
                      <class name="boxed-list"/>
                    </style>
                    <!-- Template rows will be added programmatically -->
                    
                    <!-- Sample template rows for design purposes -->
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Article</property>
                        <property name="subtitle">Basic LaTeX article template</property>
                        <property name="activatable">true</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Report</property>
                        <property name="subtitle">Comprehensive report with sections and chapters</property>
                        <property name="activatable">true</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Beamer Presentation</property>
                        <property name="subtitle">Create slide presentations with Beamer</property>
                        <property name="activatable">true</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Letter</property>
                        <property name="subtitle">Formal letter format</property>
                        <property name="activatable">true</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Book</property>
                        <property name="subtitle">Book structure with chapters and frontmatter</property>
                        <property name="activatable">true</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title">Template Details</property>
                <child>
                  <object class="GtkBox" id="template_details_box">
                    <property name="orientation">vertical</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkLabel" id="template_description_label">
                        <property name="label">Select a template to view details</property>
                        <property name="wrap">true</property>
                        <property name="xalign">0</property>
                        <property name="margin-bottom">6</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkExpander" id="template_preview_expander">
                        <property name="label">Preview</property>
                        <property name="expanded">false</property>
                        <child>
                          <object class="GtkTextView" id="preview_textview">
                            <property name="editable">false</property>
                            <property name="cursor-visible">false</property>
                            <property name="monospace">true</property>
                            <property name="top-margin">6</property>
                            <property name="bottom-margin">6</property>
                            <property name="left-margin">6</property>
                            <property name="right-margin">6</property>
                            <property name="height-request">150</property>
                            <style>
                              <class name="template-preview"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
        <child type="bottom">
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-top">6</property>
            <property name="margin-bottom">12</property>
            <property name="spacing">6</property>
            <property name="homogeneous">true</property>
            <child>
              <object class="GtkButton" id="manage_templates_button">
                <property name="label">Manage Templates</property>
                <property name="halign">start</property>
                <style>
                  <class name="flat"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <property name="halign">end</property>
                <child>
                  <object class="GtkButton" id="cancel_button">
                    <property name="label">Cancel</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="create_button">
                    <property name="label">Create Document</property>
                    <property name="sensitive">false</property>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
