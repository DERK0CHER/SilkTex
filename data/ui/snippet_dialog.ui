<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="SilkTexSnippetDialog" parent="AdwDialog">
    <property name="title">LaTeX Snippets</property>
    <property name="content-width">600</property>
    <property name="content-height">500</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="title">LaTeX Snippets</property>
                <property name="subtitle">Manage reusable code snippets</property>
              </object>
            </property>
            <child type="end">
              <object class="GtkButton" id="add_snippet_button">
                <property name="tooltip-text">Add New Snippet</property>
                <property name="icon-name">list-add-symbolic</property>
              </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            <child>
              <!-- Left side: Snippet list -->
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="width-request">200</property>
                <property name="margin-start">12</property>
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkSearchEntry" id="search_entry">
                    <property name="placeholder-text">Search snippets...</property>
                    <property name="margin-bottom">6</property>
                  </object>
                </child>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="hexpand">false</property>
                    <property name="vexpand">true</property>
                    <child>
                      <object class="GtkListBox" id="snippet_list">
                        <property name="selection-mode">single</property>
                        <style>
                          <class name="boxed-list"/>
                          <class name="sidebar"/>
                        </style>
                        <!-- Sample snippet items -->
                        <child>
                          <object class="GtkListBoxRow">
                            <property name="selectable">true</property>
                            <property name="activatable">true</property>
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="margin-start">12</property>
                                <property name="margin-end">12</property>
                                <property name="margin-top">8</property>
                                <property name="margin-bottom">8</property>
                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">Table Template</property>
                                    <property name="xalign">0</property>
                                    <property name="ellipsize">end</property>
                                    <attributes>
                                      <attribute name="weight" value="bold"/>
                                    </attributes>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">Basic 3x3 table</property>
                                    <property name="xalign">0</property>
                                    <property name="ellipsize">end</property>
                                    <style>
                                      <class name="dim-label"/>
                                      <class name="caption"/>
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkListBoxRow">
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="margin-start">12</property>
                                <property name="margin-end">12</property>
                                <property name="margin-top">8</property>
                                <property name="margin-bottom">8</property>
                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">Figure with Caption</property>
                                    <property name="xalign">0</property>
                                    <property name="ellipsize">end</property>
                                    <attributes>
                                      <attribute name="weight" value="bold"/>
                                    </attributes>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">Figure with caption and label</property>
                                    <property name="xalign">0</property>
                                    <property name="ellipsize">end</property>
                                    <style>
                                      <class name="dim-label"/>
                                      <class name="caption"/>
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Right side: Snippet editor -->
            <child>
              <object class="GtkBox" id="snippet_editor_box">
                <property name="orientation">vertical</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="margin-start">6</property>
                <property name="margin-end">12</property>
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Snippet Name</property>
                        <property name="xalign">0</property>
                        <attributes>
                          <attribute name="weight" value="bold"/>
                        </attributes>
                      </object>
                    </child>
                    <child>
                      <object class="GtkEntry" id="snippet_name_entry">
                        <property name="placeholder-text">Enter snippet name...</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Description</property>
                        <property name="xalign">0</property>
                        <attributes>
                          <attribute name="weight" value="bold"/>
                        </attributes>
                      </object>
                    </child>
                    <child>
                      <object class="GtkEntry" id="snippet_description_entry">
                        <property name="placeholder-text">Enter snippet description...</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">6</property>
                    <property name="vexpand">true</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Content</property>
                        <property name="xalign">0</property>
                        <attributes>
                          <attribute name="weight" value="bold"/>
                        </attributes>
                      </object>
                    </child>
                    <child>
                      <object class="GtkScrolledWindow">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <child>
                          <object class="GtkSourceView" id="snippet_content_view">
                            <property name="monospace">true</property>
                            <property name="show-line-numbers">true</property>
                            <property name="auto-indent">true</property>
                            <property name="indent-width">2</property>
                            <property name="tab-width">2</property>
                            <property name="insert-spaces-instead-of-tabs">true</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="spacing">6</property>
                    <property name="halign">end</property>
                    <child>
                      <object class="GtkButton" id="delete_snippet_button">
                        <property name="label">Delete</property>
                        <style>
                          <class name="destructive-action"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="save_snippet_button">
                        <property name="label">Save</property>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
