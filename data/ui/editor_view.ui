<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="SilkTexEditorView" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="hexpand">true</property>
    <property name="vexpand">true</property>

    <!-- Toolbar for editor functions -->
    <child>
      <object class="GtkBox" id="toolbar_box">
        <property name="orientation">horizontal</property>
        <property name="spacing">6</property>
        <property name="margin-start">6</property>
        <property name="margin-end">6</property>
        <property name="margin-top">6</property>
        <property name="margin-bottom">6</property>
        <style>
          <class name="toolbar-view"/>
        </style>
        <child>
          <object class="GtkButton" id="undo_button">
            <property name="tooltip-text">Undo</property>
            <property name="icon-name">edit-undo-symbolic</property>
            <property name="sensitive">false</property>
            <style>
              <class name="toolbar-button"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="redo_button">
            <property name="tooltip-text">Redo</property>
            <property name="icon-name">edit-redo-symbolic</property>
            <property name="sensitive">false</property>
            <style>
              <class name="toolbar-button"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkSeparator">
            <property name="orientation">vertical</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="bold_button">
            <property name="tooltip-text">Bold (\textbf{})</property>
            <property name="icon-name">format-text-bold-symbolic</property>
            <style>
              <class name="toolbar-button"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="italic_button">
            <property name="tooltip-text">Italic (\textit{})</property>
            <property name="icon-name">format-text-italic-symbolic</property>
            <style>
              <class name="toolbar-button"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="underline_button">
            <property name="tooltip-text">Underline (\underline{})</property>
            <property name="icon-name">format-text-underline-symbolic</property>
            <style>
              <class name="toolbar-button"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkSeparator">
            <property name="orientation">vertical</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
          </object>
        </child>
        <child>
          <object class="GtkMenuButton" id="insert_button">
            <property name="tooltip-text">Insert</property>
            <property name="icon-name">insert-object-symbolic</property>
            <property name="menu-model">insert_menu</property>
            <style>
              <class name="toolbar-button"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkMenuButton" id="env_button">
            <property name="tooltip-text">Environment</property>
            <property name="icon-name">insert-text-symbolic</property>
            <property name="menu-model">env_menu</property>
            <style>
              <class name="toolbar-button"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkSeparator">
            <property name="orientation">vertical</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="find_button">
            <property name="tooltip-text">Find and Replace</property>
            <property name="icon-name">edit-find-symbolic</property>
            <style>
              <class name="toolbar-button"/>
            </style>
          </object>
        </child>
      </object>
    </child>

    <!-- Main editor content -->
    <child>
      <object class="GtkScrolledWindow" id="editor_scroll">
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>
        <property name="has-frame">true</property>
        <child>
          <object class="GtkSourceView" id="source_view">
            <property name="monospace">true</property>
            <property name="auto-indent">true</property>
            <property name="highlight-current-line">true</property>
            <property name="indent-width">2</property>
            <property name="insert-spaces-instead-of-tabs">true</property>
            <property name="show-line-numbers">true</property>
            <property name="smart-backspace">true</property>
            <property name="tab-width">2</property>
            <property name="wrap-mode">word</property>
            <style>
              <class name="editor-view"/>
            </style>
          </object>
        </child>
      </object>
    </child>

    <!-- Find and replace bar, initially hidden -->
    <child>
      <object class="GtkRevealer" id="search_revealer">
        <property name="reveal-child">false</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
            <property name="margin-top">6</property>
            <property name="margin-bottom">6</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkSearchEntry" id="search_entry">
                    <property name="placeholder-text">Find text</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="search_prev_button">
                    <property name="tooltip-text">Previous match</property>
                    <property name="icon-name">go-up-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="search_next_button">
                    <property name="tooltip-text">Next match</property>
                    <property name="icon-name">go-down-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkToggleButton" id="search_replace_toggle">
                    <property name="tooltip-text">Show/hide replace options</property>
                    <property name="icon-name">edit-find-replace-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="search_close_button">
                    <property name="tooltip-text">Close</property>
                    <property name="icon-name">window-close-symbolic</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkRevealer" id="replace_revealer">
                <property name="reveal-child">false</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkEntry" id="replace_entry">
                        <property name="placeholder-text">Replace with</property>
                        <property name="hexpand">true</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="replace_button">
                        <property name="label">Replace</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="replace_all_button">
                        <property name="label">Replace All</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>

  <!-- Insert menu -->
  <menu id="insert_menu">
    <section>
      <item>
        <attribute name="label">Insert Section</attribute>
        <attribute name="action">editor.insert-section</attribute>
      </item>
      <item>
        <attribute name="label">Insert Subsection</attribute>
        <attribute name="action">editor.insert-subsection</attribute>
      </item>
      <item>
        <attribute name="label">Insert Subsubsection</attribute>
        <attribute name="action">editor.insert-subsubsection</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Insert Figure</attribute>
        <attribute name="action">editor.insert-figure</attribute>
      </item>
      <item>
        <attribute name="label">Insert Table</attribute>
        <attribute name="action">editor.insert-table</attribute>
      </item>
      <item>
        <attribute name="label">Insert Equation</attribute>
        <attribute name="action">editor.insert-equation</attribute>
      </item>
      <item>
        <attribute name="label">Insert List</attribute>
        <attribute name="action">editor.insert-list</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Insert Citation</attribute>
        <attribute name="action">editor.insert-citation</attribute>
      </item>
      <item>
        <attribute name="label">Insert Label</attribute>
        <attribute name="action">editor.insert-label</attribute>
      </item>
      <item>
        <attribute name="label">Insert Reference</attribute>
        <attribute name="action">editor.insert-reference</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Insert Snippet...</attribute>
        <attribute name="action">editor.insert-snippet</attribute>
      </item>
    </section>
  </menu>

  <!-- Environments menu -->
  <menu id="env_menu">
    <section>
      <item>
        <attribute name="label">Equation</attribute>
        <attribute name="action">editor.env-equation</attribute>
      </item>
      <item>
        <attribute name="label">Align</attribute>
        <attribute name="action">editor.env-align</attribute>
      </item>
      <item>
        <attribute name="label">Itemize</attribute>
        <attribute name="action">editor.env-itemize</attribute>
      </item>
      <item>
        <attribute name="label">Enumerate</attribute>
        <attribute name="action">editor.env-enumerate</attribute>
      </item>
      <item>
        <attribute name="label">Description</attribute>
        <attribute name="action">editor.env-description</attribute>
      </item>
      <item>
        <attribute name="label">Figure</attribute>
        <attribute name="action">editor.env-figure</attribute>
      </item>
      <item>
        <attribute name="label">Table</attribute>
        <attribute name="action">editor.env-table</attribute>
      </item>
      <item>
        <attribute name="label">Verbatim</attribute>
        <attribute name="action">editor.env-verbatim</attribute>
      </item>
      <item>
        <attribute name="label">Quote</attribute>
        <attribute name="action">editor.env-quote</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Custom Environment...</attribute>
        <attribute name="action">editor.env-custom</attribute>
      </item>
    </section>
  </menu>
</interface>
